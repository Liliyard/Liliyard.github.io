
@{
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

@using FinancialWebSite.ViewModels
@model PersonalInfoViewModel

@section TitleSection{家庭理财系统}
@section ContentBody
{
    <div class="container-fluid" style="margin-top:15px; margin-bottom:15px;">

        <div class="col-md-4"></div>
        <div class="col-md-4">
            <div class="container-fluid" style="text-align:center;">
                <h2>个人中心&nbsp;<small>个人信息</small></h2>
            </div>
            <hr style="border:1px solid;color:brown;">
            <div class="container-fluid">
                <table>
                    <tr>
                        <td>用户ID：</td>
                        <td>@Model.UserID</td>
                    </tr>
                    <tr>
                        <td>用户名：</td>
                        <td>@Model.UserName</td>
                    </tr>
                    <tr>
                        <td>注册手机号：</td>
                        <td>@Model.UPhone</td>
                    </tr>
                </table>
            </div>
            <hr style="border:1px solid;color:brown;">
            <div class="container-fluid">
                <form action="/Personal/ChangePassword" method="post">
                    <div class="form-group">
                        <label for="OriPassword">原密码</label>
                        <input type="password" class="form-control" name="OriPassword">
                    </div>
                    <div class="form-group">
                        <label for="NewPassword">新密码</label>
                        <input type="password" class="form-control" name="NewPassword">
                    </div>
                    <div class="form-group">
                        <label for="CfmPassword">修改密码</label>
                        <input type="password" class="form-control" name="CfmPassword">
                    </div>
                    <div style="text-align:center;">
                        <input type="submit" id="btnStyle" name="btnSubmit" style="padding-left:15px; padding-right:15px;" value="提交" />
                        &nbsp;&nbsp;
                        <input type="submit" id="btnStyle" name="btnSubmit" style="padding-left:15px; padding-right:15px;" value="取消" />
                    </div>                    
                </form>
            </div>
        </div>
        <div class="col-md-4"></div>

    </div>
}

