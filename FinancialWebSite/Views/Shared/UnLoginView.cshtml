@{
    Layout = null;
}


<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width" />

    <title>@RenderSection("TitleSection")</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/Chart.js"></script>
    <script src="~/Scripts/Chart.min.js"></script>

    <style type="text/css">

        #footer {
            left: 0px;
            right: 0px;
            position: center;
            margin-top: -0px; /* footer高度的负值 */
            height: 30px;
            clear: both;
            padding: 0px;
        }

    </style>


</head>

<body style="position:relative;background-color:#fffbf0;">
    <div class="container-fluid" style="padding:0px;height:100%">
        <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-10" style="background-color:#fff1cf;padding-left:0px;padding-right:0px;margin-top:20px;margin-bottom:20px;">
                <div style="padding-left:15px;padding-right:15px;">
                    @RenderSection("ContentBody")
                </div>
                <br />
                <div id="footer">
                    @Html.Partial("Footer")
                </div>

            </div>
            <div class="col-md-1"></div>
        </div>
    </div>
</body>
</html>
