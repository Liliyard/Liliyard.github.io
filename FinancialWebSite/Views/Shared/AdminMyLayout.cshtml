@{
    Layout = null;
}

@using FinancialWebSite.ViewModels
@model BaseViewModel

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width" />

    <title>@RenderSection("TitleSection")</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/bootstrap-datetimepicker.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/Chart.js"></script>
    <script src="~/Scripts/Chart.min.js"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.js"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.zh-CN.js"></script>

    

    <script>
        function ResetForm() {
            document.getElementById('TxtType').value = "";
            document.getElementById('TxtClass').value = "";
            document.getElementById('TxtMoney').value = "";
            document.getElementById('TxtDate').value = "";
            document.getElementById('TxtRemark').value = "";
        }
    </script>

    <style type="text/css">
        .navbar .nav li a {
            color: white;
        }

        .table th, .table td {
            text-align: center;
            vertical-align: middle !important;
        }

        #footer {
            left: 0px;
            right: 0px;
            position: center;
            margin-top: -0px; /* footer高度的负值 */
            height: 30px;
            clear: both;
            padding: 0px;
        }

        #countMenu_li {
            border: solid 1px grey;
        }

        #countMenu_a {
            padding-bottom: 0px;
            padding-top: 0px;
            color: crimson;
        }

        #indexCard {
            background-color: #d8a373;
            margin: 5px;
            padding: 15px;
            border-radius: 10px;
        }

        #titbarTitle {
            color:white;
            padding: 0 0 10px 0;
            border-bottom: 1px dashed white;
            margin-bottom: 15px;
        }

        #item {
            border-top: 1px dashed white;
            padding: 10px 0 10px 0;
            margin: 0 0 0 0;
        }

        #itemLeft {
            text-align: left;
            padding-left: 0;
            padding-right:0;
        }

        #itemRight {
            text-align: right;
            padding-right: 0;
        }

        #legend {
            display: inline-block;
            width: 15px;
            height: 15px;
            vertical-align: middle;
            margin-bottom: 5px;
        }

        .doughnut-legend-icon {
            display: inline-block;
            width: 15px;
            height: 15px;
            vertical-align: middle;
            margin-bottom: 5px;
            margin-right:10px;
        }

        .doughnut-legend-text {
            color:white;
        }

        #legend0 ul {
            list-style:none;
        }

        #indexIncome {
            color: #EBFF56;
        }

        #indexOutcome {
            color: #FEDFE1;
        }

        #SearchBox {
            margin-top:15px;
            top:10px;
            padding-left:0px;
        }

        #borrowCard {
            margin: 5px;
            padding: 20px;
            border-radius: 10px;
        }

        #btnStyle {
            padding:5px;
            background-color:#f2c9ac;
            border:1px solid #ec6d51;
            border-radius: 5px;
        }

        #smallbtnStyle {
            padding:5px 20px 5px 20px;
            background-color:#f2c9ac;
            border:1px solid #ec6d51;
            border-radius: 5px;
        }

    </style>


</head>

<body style="position:relative;background-color:#fffbf0;">
    <div>
        @{
            Html.RenderPartial("AdminNavigation", Model);
        }
    </div>
    
    <div class="container-fluid" style="padding:0px;height:100%">
        <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-10" style="background-color:#fff1cf;padding-left:0px;padding-right:0px;">
                <div style="padding-left:15px;padding-right:15px; height:100%">
                    @RenderSection("ContentBody")
                </div>
                <br />
                <div id="footer">
                    @Html.Partial("Footer")
                </div>

            </div>
            <div class="col-md-1"></div>
        </div>
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
