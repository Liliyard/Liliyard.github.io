@{
    Layout = "~/Views/Shared/UnLoginView.cshtml";
}

@section TitleSection{家庭理财系统}
@section ContentBody
{
    <div class="col-md-4"></div>
    <div class="col-md-4" style="text-align:center;padding-top:70px;padding-bottom:75px;">

        <div class="page-header" style="border-bottom:1px solid black;">
            <h1>&nbsp; 注册 <small>Register</small></h1>
        </div>

        <div style="background-color:antiquewhite;border-radius:10px;padding-top:30px;padding-bottom:30px;">
            <form style="padding-left:10px;padding-right:10px;" action="/Authentication/submitRegister" method="post">
                <div class="form-group">
                    <label for="InputUphone" class="sr-only">手机号</label>
                    <input type="tel" class="form-control" id="InputUphone" name="UPhone" placeholder="手机号">
                </div>
                <div class="form-group">
                    <label for="InputUname" class="sr-only">用户名</label>
                    <input type="text" class="form-control" id="InputUname" name="UName" placeholder="用户名">
                </div>
                <div class="form-group">
                    <label for="InputUpassword" class="sr-only">密码</label>
                    <input type="password" class="form-control" id="InputUpassword" name="UPassword" placeholder="密码">
                </div>
                <div class="form-group">
                    <label for="InputConfirm" class="sr-only">确认密码</label>
                    <input type="password" class="form-control" id="InputConfirm" name="UConPassword" placeholder="确认密码">
                </div>             
                <br />
                <button type="submit" class="btn btn-default" name="BtnRegister" style="padding-left:30px;padding-right:30px;" value="Register">注册</button>
                <button type="submit" class="btn btn-default" name="BtnRegister" style="padding-left:30px;padding-right:30px;" value="Cancel">取消</button>
            </form>
        </div>
    </div>
    <div class="col-md-4"></div>
}
